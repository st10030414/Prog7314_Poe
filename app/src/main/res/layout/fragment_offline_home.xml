<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- GO ONLINE BUTTON â€” only visible in offline mode -->
    <Button
        android:id="@+id/go_online_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Online"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Centered Circular Plus Button (same as online) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/offline_add_note"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Offline Note"
        android:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/go_online_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Offline Notes RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offline_notes_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/offline_add_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
